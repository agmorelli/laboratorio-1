#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	int num;
	int cuadrado;
	
	printf("Ingrese numero: ");
	scanf("%d", &num);
	while(num<0){
		printf("Error el numero debe ser mayor a 0:");
		fflush(stdin);
		scanf("%d", &num);
	}
	
	cuadrado=num*num;
	printf("el cuadrado del numero es:%d\n", cuadrado);
	
	
	
	return 0;
}
