#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
 	int cont=0, num=0;
 	float max;
 	
 	for(cont=0;cont<4;cont++)
 	{
	 						 printf("ingrese numero");
	 						 scanf("%d", &num);
	 						 
	 						 if(num>max)
	 						 max=num;
    }
    
    printf("el numero mayo es: %.2f \n", max);
  
  system("PAUSE");	
  return 0;
}
  
